# Restart, Reload , Exit:
$bs $mod+Shift+c reload
$bs $mod+Shift+r restart
$bs $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Coloring
# class                 border  bground text indicator child_border
client.focused          $black $blue2 $white $orange $darkgray
client.focused_inactive $black $black $white $black $black
client.unfocused        $darkred $black $white $black $black
client.urgent           $red $red $white $red $black
client.placeholder      $black $purple $purple $purple $purple

client.background       $white

# i3bar
bar {
        status_command i3status -c ~/.config/i3/i3status.conf
        position top
        separator_symbol "|"

colors 
        {
        background $black
        statusline $white
        separator $red

        focused_workspace  $blue2 $black $white
        active_workspace   $white $black $white
        inactive_workspace $darkred $black $gray
        urgent_workspace   $red $black $white
        }
}

