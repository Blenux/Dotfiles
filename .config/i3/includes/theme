# Coloring
# class                 border  bground text indicator child_border
client.focused          $black $blue2 $white $orange $blue2
client.focused_inactive $black $black $white $black $black
client.unfocused        $darkred $black $white $black $black
client.urgent           $red $red $white $red $black
client.placeholder      $black $purple $purple $purple $purple

client.background       $white

# i3bar
bar {
        status_command i3status -c ~/.config/i3/i3status.conf
        #font pango: Hack Font 12
        position top
        separator_symbol "|"
        strip_workspace_numbers yes

colors 
        {
        background $black
        statusline $white
        separator $red

        focused_workspace  $blue2 $black $white
        active_workspace   $white $black $white
        inactive_workspace $darkred $black $gray
        urgent_workspace   $red $black $white
        }
}


# RGBA Colors
set $red #FF0000
set $green #00FF00
set $blue #0000FF
set $white #FFFFFF
#
set $darkred #AA0000
set $black #000000
set $blue2 #3B6EA5

set $gray #808080
set $darkgray #666666
set $lime #00FF00
set $blue3 #275375
set $purple #800080
set $magenta #FF00FF
set $orange #FFA500
set $cyan #00FFFF
set $dark #778899
set $nord #2f343f